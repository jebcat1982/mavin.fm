= form_for @album do |f|
  -if @album.errors.any?
    #error_explanation
      %h2= "#{pluralize(@album.errors.count, "error")} prohibited this album from being saved:"
      %ul
        - @album.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :release_date
    = f.number_field :release_date
  .field
    = f.label :downloadable
    = f.number_field :downloadable
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :about
    = f.text_area :about
  .field
    = f.label :credits
    = f.text_area :credits
  .field
    = f.label :small_art_url
    = f.text_field :small_art_url
  .field
    = f.label :large_art_url
    = f.text_field :large_art_url
  .field
    = f.label :artist
    = f.text_field :artist
  .field
    = f.label :band_id
    = f.number_field :band_id
  .field
    = f.label :e_id
    = f.number_field :e_id
  .field
    = f.label :e_band_id
    = f.number_field :e_band_id
  .field
    = fields_for :tags do |tags|
      = tags.label :tags
      = tags.text_field :name
  .actions
    = f.submit 'Save'
