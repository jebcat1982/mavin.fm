= form_for @band do |f|
  -if @band.errors.any?
    #error_explanation
      %h2= "#{pluralize(@band.errors.count, "error")} prohibited this band from being saved:"
      %ul
        - @band.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :e_id
    = f.number_field :e_id
  .field
    = f.label :subdomain
    = f.text_field :subdomain
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :offsite_url
    = f.text_field :offsite_url
  .actions
    = f.submit 'Save'
