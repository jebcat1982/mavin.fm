!!!
%html
  %head
    %title Mavin.fm
    = stylesheet_link_tag "interest"
    - #= javascript_include_tag "interest"
    = csrf_meta_tags
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-15210525-11']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();


  %body#interest
    %h1= image_tag 'logo.png', :alt => 'Mavin.fm'

    - if flash[:notice]
      .notice= flash[:notice]

    .outer-container
      = yield
