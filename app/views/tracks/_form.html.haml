= form_for @track do |f|
  -if @track.errors.any?
    #error_explanation
      %h2= "#{pluralize(@track.errors.count, "error")} prohibited this track from being saved:"
      %ul
        - @track.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :number
    = f.number_field :number
  .field
    = f.label :duration
    = f.text_field :duration
  .field
    = f.label :release_date
    = f.number_field :release_date
  .field
    = f.label :downloadable
    = f.number_field :downloadable
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :streaming_url
    = f.text_field :streaming_url
  .field
    = f.label :lyrics
    = f.text_area :lyrics
  .field
    = f.label :about
    = f.text_area :about
  .field
    = f.label :credits
    = f.text_area :credits
  .field
    = f.label :small_art_url
    = f.text_field :small_art_url
  .field
    = f.label :large_art_url
    = f.text_field :large_art_url
  .field
    = f.label :artist
    = f.text_field :artist
  .field
    = f.label :album_id
    = f.number_field :album_id
  .field
    = f.label :e_id
    = f.number_field :e_id
  .field
    = f.label :e_album_id
    = f.number_field :e_album_id
  .field
    = f.label :e_band_id
    = f.number_field :e_band_id
  .actions
    = f.submit 'Save'
